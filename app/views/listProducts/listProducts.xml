<Page loaded="loaded" navigatedTo="pageNavigatedTo">
    <Page.actionBar>
        <ActionBar title="Products">
        </ActionBar>
    </Page.actionBar>
    <StackLayout orientation="vertical">
        <ListView items="{{ productsList }}" id="productsList" row="1" colSpan="2">
            <ListView.itemTemplate>
                <GridLayout columns="*, auto">
                    <Label text="{{ name }}"/>
                    <Label text="{{ price }}"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
