<Page navigatedTo="pageNavigatedTo">
    <Page.actionBar>
        <ActionBar title="Products">
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <ListView items="{{ productsList }}" id="productsList" row="1" colSpan="3">
            <ListView.itemTemplate>
                <GridLayout columns="*, auto">
                    <Label text="{{ name }}"/>
                    <Label text="{{ price }}"/>
                    <Image src="{{ image.imageSource }}" cssClass="smallImage" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
