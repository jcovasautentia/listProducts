<Page loaded="loaded" navigatingTo="pageNavigatingTo">
    <Page.actionBar>
        <ActionBar title="Products">
        </ActionBar>
    </Page.actionBar>
    <StackLayout orientation="horizontal">
        <ListView items="{{ productsList }}" id="productsListView" row="1" colSpan="3">
            <ListView.itemTemplate>
                <StackLayout id="productData" orientation="horizontal">
                    <Label text="{{ name }}"/>
                    <Label text="{{ price }}"/>
                    <Image src="{{ image }}" cssClass="smallImage" id="image"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
