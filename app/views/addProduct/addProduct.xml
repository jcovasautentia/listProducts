<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
  <Page.actionBar>
        <ActionBar title="Añade un producto"></ActionBar>
    </Page.actionBar>
    <ScrollView>
  <StackLayout orientation="vertical">
    <Label text="Nombre del producto" cssClass=""/>
    <TextField text="{{ name }}" hint="nombre" cssClass=""/>
    <Label text="Precio (€)" cssClass=""/>
    <TextField text="{{ price }}" hint="0" cssClass=""/>
    <Button text="Añadir Imagen" tap="selectImage"/>
    <Image src="{{ image }}" id="productImage" tap="animateImage"/>
    <Button text="Añadir producto" tap="goToList"/>

  </StackLayout>
</ScrollView>
</Page>
